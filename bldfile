# the mbld binary
bin mbld =
	build.myr
	clean.myr
	config.myr	# config, as generated by the ./configure script
	config+plan9-x64.myr	# config, as hardcoded for Plan 9
	deps.myr
	fsel.myr
	install.myr
	main.myr
	opts.myr
	parse.myr
	subdir.myr
        types.myr
	util.myr
;;

# we want to generate the config.myr file if we haven't configured yet.
gen config.myr = ./configure;;

man = mbld.1;;

