# the mbld binary
bin mbld =
	build.myr
	clean.myr
	config.myr	# config, as generated by the ./configure script
	config+plan9-x64.myr	# config, as hardcoded for Plan 9
	deps.myr
	fsel.myr
	install.myr
	main.myr
	opts.myr
	parse.myr
	subdir.myr
	test.myr
        types.myr
	util.myr
;;

gen config.myr {durable} = ./configure ;;

man = mbld.1;;

