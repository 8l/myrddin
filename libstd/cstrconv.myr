use "types.use"

pkg std =
	const cstrconv	: (buf : byte[:] -> byte[:])
	const cstrconvp	: (p : byte# -> byte[:])
;;

const cstrconv = {buf
	var i

	for i = 0; i < buf.len; i++
		if buf[i] == 0
			-> buf[:i]
		;;
	;;
	-> buf
}

const cstrconvp = {p
	var i, base

	i = 0
	base = p castto(intptr)
	while ((base + i) castto(byte#))# != 0
		i++
	;;
	-> p[:i]
}
