use std
/* checks pattern matching on unions with arguments.
exits with 42. */
type u = union
	`Int int
	`Chr char
	`Nil
;;

const main = {
	var v

	v = `Int 123
	match v
	| `Int 127:	std.exit(42)
	| `Int 123:	std.exit(69)
	| `Chr 'a':	std.exit(4)
	| `Nil:		std.exit(6)
	| _:		std.die("Impossible failed match\n")
	;;
}

